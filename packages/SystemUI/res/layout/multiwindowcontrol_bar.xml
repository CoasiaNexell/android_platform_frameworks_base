<com.android.systemui.statusbar.avn.MultiWindowControlBarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/system_bar_background_transparent"
    >

    <FrameLayout android:id="@+id/rot0"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/multiwin_buttons"
            android:animateLayoutChanges="true"
            >
            <!-- <View -->
            <!--     android:layout_width="match_parent" -->
            <!--     android:layout_height="200dp" -->
            <!--     android:layout_weight="0" -->
            <!--     android:visibility="invisible" -->
            <!--     /> -->
            <com.android.systemui.statusbar.policy.KeyButtonView android:id="@+id/multiwin_control"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/ic_sysbar_multiwin"
                systemui:keyCode="96"
                android:layout_weight="0"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_multiwin"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <com.android.systemui.statusbar.policy.KeyButtonView android:id="@+id/minilauncher"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/ic_sysbar_launcher"
                systemui:keyCode="97"
                android:layout_weight="0"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_minilauncher"
                />
            <!-- <View -->
            <!--     android:layout_width="match_parent" -->
            <!--     android:layout_height="160dp" -->
            <!--     android:layout_weight="0" -->
            <!--     android:visibility="invisible" -->
            <!--     /> -->
            <!--  -->
        </LinearLayout>

    </FrameLayout>

</com.android.systemui.statusbar.avn.MultiWindowControlBarView>
